    def reconnect(self):
        """
        Establece o restablece la conexi√≥n a la base de datos principal.
        """
        try:
            if self.connection and self.connection.is_connected():
                self.connection.close()
            
            self.connection = mysql.connector.connect(**self.db_config)
            print("‚úÖ Conexi√≥n exitosa a la base de datos 'ojodigital'.")
        except Error as e:
            print(f"‚ùå Error al conectar con la base de datos 'ojodigital': {e}")
            self.connection = None
            raise e

    def close(self):
